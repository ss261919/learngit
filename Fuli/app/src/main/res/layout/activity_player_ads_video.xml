<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playerAdsLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/adsVideoViewLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <vaporsome.com.vaporsome.common.custom.CustomVideoView
            android:id="@+id/adsVideoViewPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:id="@+id/adsVideoLoadLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/adsVideoLoadImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/load"
                android:visibility="visible" />
        </LinearLayout>


    </FrameLayout>


    <TextView
        android:id="@+id/adsVideoWatchFullVideoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adsVideoViewPlayer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="观看完整视频"
        android:visibility="gone" />

</LinearLayout>
