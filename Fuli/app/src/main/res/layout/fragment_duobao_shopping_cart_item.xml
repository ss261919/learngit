<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/fragment_duobao_shopping_cart_item_img"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:background="@mipmap/shouji"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/fragment_duobao_shopping_cart_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/fragment_duobao_shopping_cart_item_img"
        android:text="(第28439宝) 苹果(Apple)iphone6s"
        android:textColor="@color/colorRechargeZF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/fragment_duobao_shopping_cart_item_surplus_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/fragment_duobao_shopping_cart_item_img"
        android:text="剩余540人次"
        android:textColor="@color/colorRecharge"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/fragment_duobao_shopping_cart_item_participate_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/fragment_duobao_shopping_cart_item_img"
        android:text="参与人次"
        android:textSize="12sp" />

    <Button
        android:id="@+id/fragment_duobao_shopping_cart_item_decreaseCountBT"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/fragment_duobao_shopping_cart_item_participate_number"
        android:background="@mipmap/decrease" />

    <TextView
        android:id="@+id/fragment_duobao_shopping_cart_item_countTV"
        android:layout_width="34dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/fragment_duobao_shopping_cart_item_decreaseCountBT"
        android:background="@drawable/fragment_duobao_sopping_cart_item_et_bg"
        android:enabled="true"
        android:gravity="center"
        android:text="1"
        android:textSize="12sp" />

    <Button
        android:id="@+id/fragment_duobao_shopping_cart_item_increaseCountBT"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/fragment_duobao_shopping_cart_item_countTV"
        android:background="@mipmap/increase" />

    <TextView
        android:id="@+id/fragment_duobao_shopping_cart_item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/fragment_duobao_shopping_cart_item_increaseCountBT"
        android:text="1.00元"
        android:textColor="@color/colorTextRegister" />

    <RelativeLayout
        android:id="@+id/fragment_duobao_records_item_delRL"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/delete" />
    </RelativeLayout>


</RelativeLayout>
