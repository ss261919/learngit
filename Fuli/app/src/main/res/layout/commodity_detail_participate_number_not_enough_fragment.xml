<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commodityDetailSRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <vaporsome.com.vaporsome.common.custom.MyScrollView
            android:id="@+id/commodityDetailParticipateNumberNotEnoughScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commodityDetailTopRL"
            android:paddingBottom="53dp"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.view.ViewPager
                    android:id="@+id/commodityDetailParticipateNumberNotEnoughViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="247dp"
                    android:layout_marginTop="13dp">

                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:id="@+id/commodityDetailParticipateNumberNotEnoughGuidePointLL"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="235dp"
                    android:background="@color/colorTransparentComplete"
                    android:gravity="center"
                    android:orientation="horizontal">

                </LinearLayout>

                <TextView
                    android:id="@+id/commodityDetailParticipateNumberNotEnoughNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/commodityDetailParticipateNumberNotEnoughViewPager"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp"
                    android:text="(第90751宝）苹果（Apple）iphone 6s 16G版 4G手机"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/commodityDetailParticipateNumberNotEnoughDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/commodityDetailParticipateNumberNotEnoughNameTV"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="3dp"
                    android:text="有些礼物，能瞬间抓住人心，唯一的不同，是处处不同！（颜色随机发）"
                    android:textColor="@color/colorTopGuide"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/commodityDetailMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/commodityDetailParticipateNumberNotEnoughDescription"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp"
                    android:text="价值：￥5188元"
                    android:textColor="@color/colorRecharge"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/commodityDetailParticipateNumberNotEnoughLimitTimesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/commodityDetailParticipateNumberNotEnoughDescription"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="限购5人次"
                    android:textColor="@color/colorTopGuide"
                    android:textSize="14sp" />

                <ProgressBar
                    android:id="@+id/commodityDetailParticipateNumberNotEnoughPercentage"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_below="@+id/commodityDetailMoney"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="10dp"
                    android:max="100"
                    android:progressDrawable="@drawable/progressbar" />

                <RelativeLayout
                    android:id="@+id/commodityDetailParticipatedRL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/commodityDetailParticipateNumberNotEnoughPercentage"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/commodityDetailParticipateNumberNotEnoughParticipatedPersonNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2430"
                        android:textColor="@color/colorTopGuide" />

                    <TextView
                        android:id="@+id/commodityDetailParticipateNumberNotEnoughParticipatedPersonNumberTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/commodityDetailParticipateNumberNotEnoughParticipatedPersonNumber"
                        android:layout_marginTop="6dp"
                        android:text="已参与"
                        android:textColor="@color/colorRecharge" />

                    <TextView
                        android:id="@+id/commodityDetailParticipateNumberNotEnoughParticipatedDemandPersonNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="5188"
                        android:textColor="@color/colorRecharge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/commodityDetailParticipateNumberNotEnoughParticipatedPersonNumber"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="6dp"
                        android:text="总需人次"
                        android:textColor="@color/colorRecharge" />

                    <TextView
                        android:id="@+id/commodityDetailParticipateNumberNotEnoughSurplusPersonNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="2758"
                        android:textColor="@color/colorDuoBaoWinName" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/commodityDetailParticipateNumberNotEnoughParticipatedPersonNumber"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="6dp"
                        android:text="剩余"
                        android:textColor="@color/colorRecharge" />
                </RelativeLayout>

                <View
                    android:id="@+id/commodityDetailDivider"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/commodityDetailParticipatedRL"
                    android:layout_marginTop="1dp"
                    android:background="@color/colorDivider" />


                <RelativeLayout
                    android:id="@+id/commodityDetailParticipateNumberNotEnoughParticipateRecords"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_below="@+id/commodityDetailDivider"
                    android:layout_marginLeft="13dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="参与记录"
                        android:textColor="@color/colorRechargeZF"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/commodityDetailParticipateNumberNotEnoughParticipateRecordsInsideImg"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:src="@mipmap/add_user_img_inside" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/commodityDetailParticipateNumberNotEnoughParticipateRecords"
                    android:background="@color/colorGrayLight" />

                <RelativeLayout
                    android:id="@+id/commodityDetailParticipateNumberNotEnoughPhotoAndMesgDetail"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_below="@+id/commodityDetailParticipateNumberNotEnoughParticipateRecords"
                    android:layout_marginLeft="13dp">

                    <TextView
                        android:id="@+id/commodityDetailParticipateNumberNotEnoughPhotoAndMesgDetailTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:text="图文详情"
                        android:textColor="@color/colorRechargeZF"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/commodityDetailParticipateNumberNotEnoughPhotoAndMesgDetailTV"
                        android:text="(建议WIFI下使用)"
                        android:textSize="10sp" />

                    <ImageView
                        android:id="@+id/commodityDetailParticipateNumberNotEnoughPhotoAndMesgDetailImgInside"
                        android:layout_width="18dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="6dp"
                        android:src="@mipmap/add_user_img_inside" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/commodityDetailParticipateNumberNotEnoughPhotoAndMesgDetail"
                    android:background="@color/colorGrayLight" />

            </RelativeLayout>
        </vaporsome.com.vaporsome.common.custom.MyScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/commodityDetailParticipateNumberNotEnoughImmediatelyDuoBao"
                android:layout_width="118dp"
                android:layout_height="29dp"
                android:background="@drawable/login_button_shape_press"
                android:gravity="center"
                android:text="立即一元夺宝"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/commodityDetailParticipateNumberNotEnoughAddToShoppingCart"
                android:layout_width="118dp"
                android:layout_height="29dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/commodity_detail_addto_shopping_cart_post_bg"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </RelativeLayout>


</android.support.v4.widget.SwipeRefreshLayout>
