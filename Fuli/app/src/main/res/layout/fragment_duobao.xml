<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <android.support.v7.widget.Toolbar
        android:id="@+id/duoBaoFragmentToolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorTopGuide">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="一元夺宝"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />
    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/duoBaoFragmentDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/duoBaoFragmentToolbar" />

    <include
        android:id="@+id/duoBaoFragmentTop"
        layout="@layout/duobao_ll_top"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@+id/duoBaoFragmentDivider" />

    <android.support.v4.view.ViewPager
        android:id="@+id/duoBaoFragmentViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/duoBaoFragmentTop" />

</RelativeLayout>
