<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/registerGuideTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.077"
        android:background="@color/colorTopGuide"
        android:gravity="center"
        android:text="用户注册"
        android:textColor="@color/colorWhite"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.032"></LinearLayout>

    <LinearLayout
        android:id="@+id/registerLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_weight="0.229"
        android:background="@mipmap/register_input_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/registerUserNameTV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="手机号:"
                android:textColor="@color/colorTextRegister"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/registerUserNameET"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/registerUserNameTV"
                android:layout_weight="6"
                android:background="@drawable/login_user_name_et"
                android:focusable="true"
                android:hint="请输入手机号"
                android:maxLines="1"
                android:textColor="@color/colorRegisterET"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/registerVerificationNumberBT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/colorTextRegister"
                android:textSize="16sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/registerPasswordTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="密码:"
                android:textColor="@color/colorTextRegister"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/registerUserPasswordET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/registerPasswordTV"
                android:background="@drawable/login_user_name_et"
                android:hint="请输入密码"
                android:maxLines="1"
                android:password="true"
                android:textColor="@color/colorRegisterET"
                android:textSize="16sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/registerVerificationLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/registerUserNameET"
            android:layout_weight="1">

            <TextView
                android:id="@+id/registerUserPasswordConfirmTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="确认密码:"
                android:textColor="@color/colorTextRegister"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/registerUserPasswordConfirmET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/registerUserPasswordConfirmTV"
                android:background="@drawable/login_user_name_et"
                android:hint="确认密码"
                android:maxLines="1"
                android:password="true"
                android:textColor="@color/colorRegisterET"
                android:textSize="16sp" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:layout_weight="0.06">

        <EditText
            android:id="@+id/registerVerificationNumberET"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/login_button_shape_nomal"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="33dp"
        android:layout_weight="0.07"
        android:background="@drawable/login_button_shape_press"
        android:text="注册"
        android:textColor="@color/colorGray"
        android:textSize="22sp" />
</LinearLayout>