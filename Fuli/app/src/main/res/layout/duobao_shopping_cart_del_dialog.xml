<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDivider"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="@color/colorDivider"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/versionUpdateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="要从购物车中移除该宝贝吗?"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_duobao_records_item_delCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:background="@drawable/login_button_shape_nomal"
                android:gravity="center"
                android:text="取消" />

            <TextView
                android:id="@+id/fragment_duobao_records_item_delOk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:background="@drawable/login_button_shape_press"
                android:gravity="center"
                android:text="确定" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
